<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/income_expense_add"
    tools:context=".AddIncomeActivity">

    <!-- Income Amount EditText -->
    <EditText
        android:id="@+id/etIncomeAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Enter Income Amount"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Income Note EditText -->
    <EditText
        android:id="@+id/etIncomeNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Enter Income Note"
        android:inputType="textMultiLine"
        android:minHeight="48dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/etIncomeAmount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Save Income Button -->
    <Button
        android:id="@+id/btnSaveIncome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Income"
        android:padding="16dp"
        android:minHeight="48dp"
        app:layout_constraintTop_toBottomOf="@id/etIncomeNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
